using System;

public abstract class srShape;
{
    protected string srColor;

    //constructors
    public srShape()
    {
        srColor = "white";
    }
    public srShape(string color)
    {
        srColor = color;
    }

    //setter and getter
    public void srSetColor(string color)
    {
        srColor = color;
    }
    public string srGetColor()
    {
        return srColor;
    }

    //abstract get area method
    public abstract double srGetArea();
}